<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_squares15"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.up.cs301.squares15.squares15.Squares15Activity"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="186dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Random"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Click reset to Randomize! Memo: If the button changes color this is an indication that it is in the right spot!"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="#8b2266"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_weight="0.23" />

        <Button
            android:id="@+id/Reset"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_weight="0.25"
            android:background="#8b2266"
            android:text="Reset"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main"
        android:layout_width="732dp"
        android:layout_height="595dp"
        android:layout_weight="0.55"
        android:orientation="horizontal"
        android:weightSum="1">

        <GridLayout
            android:layout_width="476dp"
            android:layout_height="563dp"
            android:layout_weight="0.30">

            <Button
                android:id="@+id/one"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:background="@android:color/holo_green_light"
                android:layout_column="0"
                android:layout_row="0"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/two"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:background="@android:color/holo_green_light"
                android:layout_column="1"
                android:layout_row="0"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/three"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:background="@android:color/holo_green_light"
                android:layout_column="2"
                android:layout_row="0"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/four"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:background="@android:color/holo_green_light"
                android:layout_column="3"
                android:layout_row="0"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="0"
                android:layout_row="1"
                android:background="@android:color/holo_green_light"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/six"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="1"
                android:layout_row="1"
                android:background="@android:color/holo_green_light"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/seven"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="2"
                android:layout_row="1"
                android:background="@android:color/holo_green_light"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="3"
                android:layout_row="1"
                android:background="@android:color/holo_green_light"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/twelve"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="3"
                android:layout_row="2"
                android:background="@android:color/holo_green_light"
                android:text="12"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/eleven"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="2"
                android:layout_row="2"
                android:background="@android:color/holo_green_light"
                android:text="11"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/ten"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="1"
                android:layout_row="2"
                android:background="@android:color/holo_green_light"
                android:text="10"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="0"
                android:layout_row="2"
                android:background="@android:color/holo_green_light"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/empty"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="3"
                android:layout_row="3"
                android:background="@android:color/white"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/fifteen"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="2"
                android:layout_row="3"
                android:background="@android:color/holo_green_light"
                android:text="15"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/fourteen"
                android:layout_width="115dp"
                android:layout_height="136dp"
                android:layout_column="1"
                android:layout_row="3"
                android:background="@android:color/holo_green_light"
                android:text="14"
                android:textColor="@android:color/white"
                android:textSize="50sp" />

            <Button
                android:id="@+id/thirteen"
                android:layout_width="115dp"
                android:layout_height="135dp"
                android:layout_column="0"
                android:layout_row="3"
                android:background="@android:color/holo_green_light"
                android:text="13"
                android:textColor="@android:color/white"
                android:textSize="50sp" />
        </GridLayout>
    </LinearLayout>

</LinearLayout>
